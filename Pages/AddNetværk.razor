@page "/add-netværk"

@attribute [Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddNetværk> L

<PageTitle>Add Netværk</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Netværk</RadzenAlert>
        <RadzenTemplateForm TItem="ClientCare.Models.CRM.Netværk" Data="@netværk" Visible="@(netværk != null && canEdit)" Submit="@FormSubmit">
           
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Navn" Component="Name" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@netværk.Name" Name="Name" />
                    <RadzenRequiredValidator Component="Name" Text="Navn er påkrævet" />
                </RadzenColumn>
            </RadzenRow>

            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Medlemmer" Component="Medlem" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@medlemmerForMedlemId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Vælg medlemmer" style="display: block; width: 100%" @bind-Value="@netværk.MedlemId" Name="MedlemId"
                           />
                </RadzenColumn>
            </RadzenRow>


          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
          
        </RadzenTemplateForm>
    </RadzenColumn>

